
<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Recipe</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/recipes/<%=recipe._id%>?_method=PUT" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="recipe[title]" value="<%=recipe.title %>"
                    required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="cuisine">Cuisine</label>
                <input class="form-control" type="text" id="cuisine" name="recipe[cuisine]" value="<%=recipe.cuisine %>"
                    required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <!-- Ingredients -->
            <div class="mb-3">
                <label class="form-label" for="ingredients">Ingredients</label>
                <textarea class="form-control" type="text" id="ingredients" name="recipe[ingredients]"
                    required><%= recipe.ingredients.join('\n') %></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <!-- Instructions -->
            <div class="mb-3">
                <label class="form-label" for="instructions">Instructions</label>
                <textarea class="form-control" type="text" id="instructions" name="recipe[instructions]"
                    required><%= recipe.instructions.join('\n') %></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <!-- Cooktime -->
                    <div class="mb-3">
                        <label class="form-label" for="cookTime">Cook Time</label>
                        <input class="form-control" type="text" id="cookTime" name="recipe[cookTime]"
                            value="<%=recipe.cookTime %>" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <!-- Difficulty -->
                    <div class="mb-3">
                        <label class="form-label" for="difficulty">Difficulty</label>
                        <input class="form-control" type="text" id="difficulty" name="recipe[difficulty]"
                            value="<%=recipe.difficulty %>" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>
            </div>

            <button class="btn btn-primary btn-block">Update Recipe</button>
        </form>
    </div>
</div>
